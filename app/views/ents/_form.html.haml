= form_for @ent do |f|
  - if @ent.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ent.errors.count, "error")} prohibited this ent from being saved:"
      %ul
        - @ent.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_area :title
  .field
    = f.label :desc
    = f.text_area :desc
  .field
    = f.label :link
    = f.text_field :link
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :pub
    = f.text_field :pub
  .actions
    = f.submit 'Save'
